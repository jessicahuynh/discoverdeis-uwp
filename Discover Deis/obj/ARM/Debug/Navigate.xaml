<Page
    x:Class="Discover_Deis.Navigate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Discover_Deis"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <StackPanel VerticalAlignment="Top" Grid.Row="1">
            <StackPanel x:ConnectionId='1' Name="startPanel"
                        Style="{StaticResource autocompletePanel}">
                <TextBlock Text="start"
                           Style="{StaticResource autocompleteLabel}"
                           Foreground="Green"/>
                <AutoSuggestBox x:ConnectionId='4' Style="{StaticResource autocomplete}" 
                            PlaceholderText="current location"
                            Name="start" />
            </StackPanel>
            <StackPanel x:ConnectionId='2' Name="endPanel"
                        Style="{StaticResource autocompletePanel}">
                <TextBlock Text="end"
                           Style="{StaticResource autocompleteLabel}"
                           Foreground="Red"/>
                <AutoSuggestBox x:ConnectionId='3' Style="{StaticResource autocomplete}"
                            Name="end"
                            PlaceholderText="shapiro"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>

