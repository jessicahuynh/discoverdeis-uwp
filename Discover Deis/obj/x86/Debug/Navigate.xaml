<Page
    x:Class="Discover_Deis.Navigate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Discover_Deis"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='1' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='2' x:Name="VSPhone">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="inputPanel.Margin" Value="12,0,12,0" />
                    </VisualState.Setters>
                </VisualState>
                
                <VisualState x:ConnectionId='3' x:Name="VSTablet">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="721" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="inputPanel.Margin" Value="24,0,24,0" />
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:ConnectionId='4' x:Name="VSLaptop">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1025" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="inputPanel.Margin" Value="24,0,24,0" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel x:ConnectionId='5' VerticalAlignment="Top" Grid.Row="0" Name="inputPanel">
            <StackPanel x:ConnectionId='7' Name="startPanel"
                        Style="{StaticResource autocompletePanel}">
                <TextBlock Text="start"
                           Style="{StaticResource autocompleteLabel}"
                           Foreground="Green"/>
                <AutoSuggestBox x:ConnectionId='10' Style="{StaticResource autocomplete}" 
                            PlaceholderText="current location"
                            Name="start" />
            </StackPanel>
            <StackPanel x:ConnectionId='8' Name="endPanel"
                        Style="{StaticResource autocompletePanel}">
                <TextBlock Text="end"
                           Style="{StaticResource autocompleteLabel}"
                           Foreground="Red"/>
                <AutoSuggestBox x:ConnectionId='9' Style="{StaticResource autocomplete}"
                            Name="end"
                            PlaceholderText="shapiro"/>
            </StackPanel>
        </StackPanel>


        <CommandBar Grid.Row="2">
            <CommandBar.CommandBarOverflowPresenterStyle>
                <Style TargetType="CommandBarOverflowPresenter">
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="MinWidth" Value="320"/>
                </Style>
            </CommandBar.CommandBarOverflowPresenterStyle>

            <AppBarButton Label="Share">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72D;"/>
                </AppBarButton.Icon>
            </AppBarButton>

            <CommandBar.SecondaryCommands>
                <AppBarButton Icon="Emoji2" Label="Feedback" />
                <AppBarButton Label="Print" FontFamily="Segoe MDL2 Assets">
                    <AppBarButton.Icon>
                        <FontIcon 
                            FontFamily="Segoe MDL2 Assets" 
                            Glyph="&#xE2F6;"/>
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton Icon="Setting" Label="Settings" />
            </CommandBar.SecondaryCommands>

            <CommandBar.Content>
                <TextBlock x:ConnectionId='6' Name="bottomCurrentLoc" Text="current location" Margin="12,14"/>
            </CommandBar.Content>
        </CommandBar>

    </Grid>
</Page>

